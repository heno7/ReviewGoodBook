<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/static/reset.css" />
    <link rel="stylesheet" href="/static/base.css" />
    <link rel="stylesheet" href="/static/world/review/show-reviews.css" />
  </head>
  <body>
    <!-- Header -->
    <div id="header">
      <div id="left">
        <div id="logo">
          <span>Review</span><span>Good</span><span>Boook</span>
        </div>
        <div>About</div>
      </div>
      <div id="right">
        <div id="search">
          <button id="search-btn">Search</button>
          <input
            id="search-input"
            type="text"
            placeholder="Search reviews discussions of books "
          />
        </div>
        <div id="auth">
          <% if(userName) { %>
          <div id="username"><%= userName %></div>
          <button><a href="/users/auth/logout">Log out</a></button>
          <% } else { %>
          <button><a href="/users/auth/login">Log in</a></button>
          <button><a href="/users/auth/register">Sign up</a></button>
          <% } %>
        </div>
      </div>
    </div>
    <!-- Side Bar -->
    <div id="right-side-bar">
      <div>Discover</div>
      <hr />
      <div style="text-align: center">Review</div>
      <div><a href="/world/reviews/best-of-day">Best Reviews of Day</a></div>
      <div><a href="/world/reviews/best-of-week">Best Reviews of Week</a></div>
      <div>
        <a href="/world/reviews/best-of-month">Best Reviews of Month</a>
      </div>
      <div><a href="/world/reviews/best-of-year">Best Reviews of Year</a></div>
      <hr />
      <div style="text-align: center">Discussion</div>
      <div>Best Discussions of Week</div>
      <div>Best Discussions of Month</div>
      <div>Best Discussions Of Year</div>
    </div>

    <!-- Space -->
    <div id="space"></div>

    <!-- Main -->
    <div id="main-navigation">
      <div><a href="/world">World</a></div>
      <div><a href="/home">Home</a></div>
    </div>
    <div id="main-display">
      <% reviews.forEach(function(review){ %>
      <div class="review-card">
        <div class="content">
          <p><%= review.bookInfo.name %></p>
          <p><%= review.title %></p>
          <p>Stars: <%= review.stars %></p>
        </div>
        <div class="action">
          <p style="display: none"><%= review._id %></p>

          <button class="view">Read</button>
        </div>
      </div>
      <% }); %>
    </div>

    <div id="show-notify">
      <div class="modal">
        <div class="model-content">
          <div id="notify-container">
            <p id="notify-message"></p>
            <div id="button-container">
              <button id="yes">Yes</button>
              <button id="no">No</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div id="footer">
      Lorem ipsum dolor, sit amet consectetur adipisicing elit. Enim,
      necessitatibus tempore. Unde vero labore animi nostrum, dicta blanditiis
      error saepe quisquam debitis modi, optio officia culpa molestiae,
      doloremque necessitatibus commodi.
    </div>
    <script src="/static/world/review/show-reviews.js"></script>
  </body>
</html>
