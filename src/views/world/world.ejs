<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Page</title>
    <link rel="stylesheet" href="/static/reset.css" />
    <link rel="stylesheet" href="/static/base.css" />
    <link rel="stylesheet" href="/static/common/show.css" />
    <link rel="stylesheet" href="/static/world/world.css" />
    <link rel="stylesheet" href="/static/world/review/show-reviews.css" />
  </head>
  <body>
    <!-- Header -->
    <div id="header">
      <div id="left">
        <a href="/">
          <div id="logo">
            <span>Review</span><span>Good</span><span>Book</span>
          </div>
        </a>
        <!-- <div id="about">About</div> -->
      </div>
      <div id="right">
        <div id="search">
          <button id="search-btn">Search</button>
          <input
            id="search-input"
            type="text"
            placeholder="Search reviews discussions of books "
          />
        </div>
        <div id="auth">
          <% if(user) { %>
          <div id="avatar">
            <p><%= user.avatar %></p>
            <img src="" alt="" />
          </div>
          <a href="/users/auth/logout">Log out</a>
          <% } else { %>
          <a href="/users/auth/login">Log in</a>
          <a href="/users/auth/register">Sign up</a>
          <% } %>
        </div>
      </div>
    </div>
    <!-- Side Bar -->
    <div id="right-side-bar">
      <div id="title">Discover</div>

      <div id="review">
        <div>Reviews</div>
        <div class="criteria">
          <a href="/world/reviews/best-random" class="active">Random Reviews</a>
        </div>
        <div class="criteria">
          <a href="/world/reviews/best-of-day">Best Reviews Of Day</a>
        </div>
        <div class="criteria">
          <a href="/world/reviews/best-of-week">Best Reviews Of Week</a>
        </div>
        <div class="criteria">
          <a href="/world/reviews/best-of-month">Best Reviews Of Month</a>
        </div>
        <div class="criteria">
          <a href="/world/reviews/best-of-year">Best Reviews of Year</a>
        </div>
      </div>

      <div id="discussion">
        <div>Discussions</div>
        <div>Best Discussions of Week</div>
        <div>Best Discussions of Month</div>
        <div>Best Discussions Of Year</div>
      </div>
    </div>

    <!-- Space -->
    <div id="space"></div>

    <!-- Main -->
    <div id="main-navigation">
      <div id="world"><a href="/world" class="active">World</a></div>
      <div id="sperator"></div>
      <div id="home"><a href="/home">Home</a></div>
    </div>
    <div id="main-display">
      <div id="card-container"></div>
    </div>

    <!-- Footer -->
    <div id="footer">
      Lorem ipsum dolor, sit amet consectetur adipisicing elit. Enim,
      necessitatibus tempore. Unde vero labore animi nostrum, dicta blanditiis
      error saepe quisquam debitis modi, optio officia culpa molestiae,
      doloremque necessitatibus commodi.
    </div>

    <%- include('../common/show'); %>

    <script src="/static/common/show.js"></script>
    <script src="/static/common/avatar.js"></script>
    <script src="/static/world/review/show-reviews.js"></script>
  </body>
</html>
