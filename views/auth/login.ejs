<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/static/auth/login.css" />
  </head>
  <body>
    <div id="login-container">
      <form action="/users/auth/login" method="post">
        <div class="imgcontainer">
          <img src="img_avatar2.png" alt="Avatar" class="avatar" />
        </div>

        <div class="container">
          <label for="email"><b>Email</b></label>
          <input type="text" placeholder="Enter Email" name="email" required />

          <label for="password"><b>Password</b></label>
          <input
            type="password"
            placeholder="Enter Password"
            name="password"
            required
          />

          <button type="submit">Login</button>
        </div>

        <div id="footer" class="container" style="background-color: #f1f1f1">
          <button type="button" class="cancelbtn">
            <a href="/">Cancel</a>
          </button>
          <p>Not a member?<a href="/users/auth/register">Sign up</a></p>
          <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
      </form>
    </div>
    <!-- <script src="/static/auth/login.js"></script> -->
  </body>
</html>
